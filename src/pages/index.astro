---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import GitHubIcon from "../icons/GitHub.astro";
import SocialPill from "../icons/SocialPill.astro";
import Experience from "../components/Experience.astro";
import BriefCaseIcon from "../icons/BriefCase.astro";
---

<Layout
	title="Porfolio JorBDev - Desarrollador y Programador Web"
	description="Contrata a JorBDev para crear tu aplicación web o de escritorio. Desarrollador web y escritorio. Especializao en crear aplicaciones únicas."
>
	<main class="px-4">
		<SectionContainer class="pt-40 pb-24">
			<img
				class="rounded-full size-12 mb-4"
				src="https://www.semana.com/resizer/WptQ_ql9ltRMebaAsl6yvnD-7tQ=/fit-in/1920x0/smart/filters:format(jpg):quality(80)/cloudfront-us-east-1.images.arcpublishing.com/semana/KVRYJNDM6FGKPGL6WXPO26HFUA.png"
				alt="jorge"
			/>
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hey, soy JorBDev <a
					href="https://www.linkedin.com/in/jorgebdev/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span
					>Estudiante de por vida 🧑‍🎓. +1 año de experiencia como
					Freelancer.</span
				>
				<span class="text-yellow-200/90"
					>Desarrollador web y escritorio,</span
				>
				editor de videos.
				<span class="text-blue-200/90">De Medellin, Colombia 🇨🇴.</span>
				<span class="text-red-200/90"
					>Especializado en crear aplicaciones únicas.</span
				>
			</h2>

			<nav class="flex gap-4 mt-4 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/jorgebdev/">
					<LinkedInIcon />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/JorBDev">
					<GitHubIcon />
					GitHub
				</SocialPill>
				<SocialPill href="mailto:jorbdevcontact@gmail.com">
					<MailIcon />
					jorbdevcontact@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCaseIcon class="size-7" />
				Experiencia
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
